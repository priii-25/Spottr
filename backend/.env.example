# Server Configuration
HOST=0.0.0.0
PORT=8000
ENV=production

# Model Configuration
MODEL_PATH=../models/weights/best.pt
CONFIDENCE_THRESHOLD=0.25
IOU_THRESHOLD=0.45
MAX_DETECTIONS=300

# WebSocket Configuration
WS_MAX_CONNECTIONS=10
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_QUEUE_SIZE=100

# Performance
USE_CUDA=true
DEVICE=cuda
MAX_WORKERS=4
FRAME_BUFFER_SIZE=5

# CORS
CORS_ORIGINS=exp://,http://localhost:8081,http://192.168.*.*:8081

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/detection.log
